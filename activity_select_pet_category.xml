<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_pet_category"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.sapnagangwar.projectpetstore.SelectPetCategory">

    <TextView
        android:id="@+id/tvCategogy"
        android:text="Select a categogy of Pet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/btnDog"
        android:text="Dog"
        android:onClick="onClickDog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <Button
        android:id="@+id/btnCat"
        android:text="Cat"
        android:onClick="onClickCat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <Button
        android:id="@+id/btnFish"
        android:text="Fish"
        android:onClick="onClickFish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <Button
        android:id="@+id/btnBird"
        android:text="Bird"
        android:onClick="onClickBird"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         />

    <Button
        android:id="@+id/btnBackToHome"
        android:text="Back to Home"
        android:onClick="onBackToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

</LinearLayout>
